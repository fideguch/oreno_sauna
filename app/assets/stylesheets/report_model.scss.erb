.sakatsu-box {
	width: 100%;
	padding: 16px;
	border-top: solid 1px #C8C8C8;
	.profile {
		display: flex;
		height: 32px;
	}
	.saunner-image {
		border-radius: 50%;
		height: 32px;
		width: 32px;
		border: solid 1px #707070;
		background-size: cover;
		background-position: center;
		background-image: url("<%= asset_path('user_no_image.jpg')%>");
	}
	.saunner-name {
		margin-left: 8px;
		line-height: 32px;
		font-size: 12px;
		color: #212529;
	}
	.comment-title {
		font-size: 18px;
		margin-top: 8px;
		font-weight: 700;
	}
	.comment {
		margin-top: 8px;
		font-size: 14px;
		word-wrap: break-word;
		line-height: 1.5em;
	}
	.sakatsu-top-photo {
		margin-top: 8px;
		height: 200px;
		margin-top: 8px;
	}
	.sakatsu-photo {
		width: 100%;
		height: 200px;
		object-fit: cover;
		border-radius: 5px;
	}
}
.saunner-photo-profile-report {
	width: 32px;
	height: 32px;
	object-fit: cover;
	border-radius: 50%;
	border: solid 1px #707070;
}
