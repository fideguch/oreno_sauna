@import "bootstrap";

h1, .h1, h2, .h2, h3, .h3 {
	margin: 0;
}

a:link, a:visited, a:hover, a:active {
	color:#FFFFFF;
	text-decoration:none;
}

#Others {
	display: none;
}

@media screen and (max-width: 1024px) {
	#Others {
		display: block;
	}
	#PC {
		display: none;
	}
	//header
	header {
		height: 70px;
		width: 100%;
	}
	#blue-line {
		height: 6px;
		width: 100%;
		background-color: #1C75BC;
	}
	#not-login-nav {
		.nav-content{
			margin-right: 16px;
			margin-left: auto;
			display: flex;
			padding-top: 16px;
			width: 192px;
		}
		background-color: rgba(0,0,255,0);
		height: 64px;
		width: 100%;
		font-size: 16px;
	}
	#login-nav {
		height: 70px;
		background-color: #1C75BC;
		display: flex;
		.nav-content{
			margin-right: 16px;
			margin-left: auto;
			margin-top: 20px;
			margin-bottom: 20px;
			display: flex;
			width: 142px;
		}
	}
	//footer
	footer {
		background-color: #1C75BC;
		height: 289px;
		width: 100%;
		// justify-content: center;
		font-weight: 500;
	}
	.f-1 {
		margin-left: auto;
		margin-right: 8px;
	}
	.f-2 {
		margin-right: auto;
		margin-left: 8px;
	}
	.f-3 {
		margin-left: auto;
		margin-right: auto;
	}
	.f-4 {
		margin-left: 8px;
		margin-right: 8px;
	}
	#sns-box {
		a {
			position: relative;
			display: block;
			text-align: center;
		}
		padding-top: 16px;
		height: 46px;
		font-size: 30px;
		display: flex;
	}
	#content-1 {
		padding-top: 16px;
		height: 46px;
		font-size: 14px;
		display: flex;
	}
	#footer-logo {
		padding-top: 16px;
		text-align: center;
	}
	//btn
	.orange-btn {
		background-color: #F9A638;
		color :#FFF;
		border: none;
	}
	.blue-btn {
		background-color: #5CC0EF;
		border: none;
	}
	.blue-noborder-btn {
		color: #5CC0EF;
		border: none;
	}
}

.sakatsu-box-index {
	width: 100%;
	padding: 16px;
	border-top: solid 1px #C8C8C8;
	.profile {
		display: flex;
		height: 32px;
	}
	.saunner-image {
		border-radius: 50%;
		height: 32px;
		width: 32px;
		border:  solid 1px #707070;
		background-size: cover;
		background-position: center;
		background-image: url("<%= asset_path('user_no_image.jpg')%>");
	}
	.saunner-name {
		margin-left: 8px;
		line-height: 32px;
		font-size: 14px;
		color: #212529;
	}
	.comment-title {
		font-size: 18px;
		margin-top: 8px;
		font-weight: 700;
		color: #212529;
	}
	.comment {
		margin-top: 8px;
		font-size: 14px;
		word-wrap: break-word;
		line-height: 1.5em;
		color: #212529;
	}
	.sakatsu-top-photo {
		margin-top: 8px;
		height: 200px;
		margin-top: 8px;
	}
	.sakatsu-photo {
		width: 100%;
		height: 200px;
		object-fit: cover;
		border-radius: 5px;
	}
}

.pagination {
  justify-content: center;
  li a {
	  color: #1C75BC; }
}

.pagination .active a {
	background-color: #1C75BC !important;
	border-color: #1C75BC !important;
	color: #FFFFFF !important;
}

.policy-container {
	padding: 16px;
	width: 100%;
}
.policy-text {
	line-height: 1.5;
	font-size: 14px;
	font-weight: 700;
}
