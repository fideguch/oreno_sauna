<%= form_with(model: sauna, local: true) do |form| %>
  <% if sauna.errors.any? %>
    <div class="alert alert-danger" role="alart" style="margin-top: 20px;">
      送信に失敗しました。<br>
    <% sauna.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
      入力内容を再度ご確認下さい。
    </div>
  <% end %>

  <div class="form-container">
    <div class="form-group">
      <%= form.label :sauna_name, "施設名（必須）", class: "form-label" %>
      <%= form.text_field :sauna_name, autofocus: true, class: 'form-control', placeholder: "50文字以下", value: sauna.sauna_name %>
    </div>

    <div class="form-group">
      <%= form.label :picture, "メイン画像", class: "form-label" %>
      <%= form.file_field :picture, class: "filestyle", "data-text": "ファイル選択", 'data-btnClass': "btn btn-primary form-orange-btn", value: sauna.picture %>
    </div>

    <%= form.fields_for :area do |i| %>
      <div class="form-group">
        <%= i.label :area_name, "最寄駅（必須）", class: "form-label" %>
        <div style="display: flex; padding-right: 216px;">
          <%= i.text_field :area_name, autofocus: true, class: "form-control", placeholder: "渋谷" %>
          <p class="set_temp">駅</p>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :address, "住所", class: "form-label" %>
      <%= form.text_field :address, autofocus: true, class: 'form-control', placeholder: "50文字以下", value: sauna.address %>
    </div>

    <div class="form-group">
      <%= form.label :phone, "電話番号", class: "form-label" %>
      <%= form.text_field :phone, autofocus: true, class: 'form-control', placeholder: "ハイフンなし", value: sauna.phone %>
    </div>

    <div class="form-group">
      <%= form.label :business_hours, "営業時間", class: "form-label" %>
      <%= form.text_area :business_hours, autofocus: true, class: 'form-control', style: "resize: none;", placeholder: "75文字以下", rows: "5", value: sauna.business_hours %>
    </div>

    <div style="display: flex; color: #212529;">
      <p style="font-size: 16px; display: block; padding-right: 24px; font-weight: 700 !important;">男湯</p>
      <div class="form-check form-check-inline">
        <%= form.check_box :man_not_exist, class: "form-check-input" %>
        <%= form.label :man_not_exist, "男湯はない", class: "form-check-label form-label", style: "font-size: 12px; font-weight: 500 !important;", value: sauna.man_not_exist %>
      </div>
    </div>

    <div style="padding: 0 16px">
      <div class="form-group">
        <%= form.label :man_sauna_temp, "サウナの温度は？（1〜250）", class: "form-label" %>
        <div style="display: flex; padding-right: 200px;">
          <%= form.number_field :man_sauna_temp, autofocus: true, class: 'form-control', placeholder: "100", value: sauna.man_sauna_temp %>
          <p class="set_temp">度</p>
        </div>
      </div>
    </div>

    <div style="padding: 0 16px">
      <div class="form-group">
        <%= form.label :man_water_temp, "水風呂の温度は？（1〜100）", class: "form-label" %>
        <div style="display: flex; padding-right: 200px;">
          <%= form.number_field :man_water_temp, autofocus: true, class: 'form-control', placeholder: "20", value: sauna.man_water_temp %>
          <p class="set_temp">度</p>
        </div>
      </div>
    </div>

    <div style="display: flex; color: #212529;">
      <p style="font-size: 16px; display: block; padding-right: 24px; font-weight: 700 !important;">女湯</p>
      <div class="form-check form-check-inline">
        <%= form.check_box :woman_not_exist, class: "form-check-input" %>
        <%= form.label :woman_not_exist, "女湯はない", class: "form-check-label form-label", style: "font-size: 12px; font-weight: 500 !important;", value: sauna.woman_not_exist %>
      </div>
    </div>

    <div style="padding: 0 16px">
      <div class="form-group">
        <%= form.label :woman_sauna_temp, "サウナの温度は？（1〜250）", class: "form-label" %>
        <div style="display: flex; padding-right: 200px;">
          <%= form.number_field :woman_sauna_temp, autofocus: true, class: 'form-control', placeholder: "100", value: sauna.woman_sauna_temp %>
          <p class="set_temp">度</p>
        </div>
      </div>
    </div>

    <div style="padding: 0 16px">
      <div class="form-group">
        <%= form.label :woman_water_temp, "水風呂の温度は？（1〜100）", class: "form-label" %>
        <div style="display: flex; padding-right: 200px;">
          <%= form.number_field :woman_water_temp, autofocus: true, class: 'form-control', placeholder: "20", value: sauna.woman_water_temp %>
          <p class="set_temp">度</p>
        </div>
      </div>
    </div>

  <div class="actions">
    <%= form.submit "送信する", style: "margin-bottom: 16px;", class: "btn btn-primary blue-btn mx-auto d-block center-block" %>
  </div>
<% end %>
</div>
